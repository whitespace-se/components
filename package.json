{
  "private": true,
  "workspaces": {
    "packages": [
      "pkg",
      "storybook",
      "examples/*"
    ],
    "nohoist": [
      "**/babel-loader",
      "**/webpack**"
    ]
  },
  "type": "module",
  "devDependencies": {
    "esbuild": "^0.11.12",
    "eslint": "^7.23.0",
    "eslint-plugin-react": "^7.23.1",
    "fast-glob": "^3.2.5",
    "prettier": "^2.2.1",
    "rimraf": "^3.0.2"
  },
  "scripts": {
    "build": "cd pkg && yarn build",
    "build:storybook": "cd storybook && yarn build",
    "dev": "cd pkg && yarn dev",
    "format": "prettier --write '**/*.{js,json,md,mdx,yml,css}'",
    "start": "yarn dev",
    "storybook": "cd storybook && yarn dev",
    "watch": "yarn dev"
  }
}
